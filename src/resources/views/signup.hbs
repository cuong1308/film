<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/app.css" />
    <title>Đăng ký</title>
  </head>
  <body>
    <section class="auth row">
      <div class="sidenav col-md-6">
        <div class="login-main-image">
          <a href="/">
            <img srcset="/img/logoo.png 2x" alt="" class="logo" /></a>
          <img class="marverl" src="/img/marvel.png" alt="" />
        </div>
        <div class="login-main-text">

        </div>
      </div>
      <div class="main col-md-6">
        <div class="animation-spiderman">
          <img srcset="/img/spiderman.png 2x" alt="" />
        </div>
        <div class="col-md-6 col-sm-12">

          <div class="register-form">
            <form class="submit-register" method="POST" action="/auth/register">
              <h3 class="register-title">
                Đăng ký
              </h3>
              <div class="form-group">
                <label>Họ Tên: </label>
                <input
                  id="name"
                  type="text"
                  name="name"
                  class="form-repeat form-control"
                  placeholder="Nhập họ tên"
                />
              </div>
              <div class="form-group">
                <label>Tên tài khoản: </label>
                                <input id="username" type="text"
                                    class="form-account form-control"
                                    name="username"
                                    placeholder="Nhập tên tài khoản">
                <!-- <div class="error error-username"
                                    style="display: none">
                                    * Thông tin bắt buộc
                                </div> -->
              </div>
              <div class="form-group">
                <label>Địa chỉ email: </label>
                <input
                  id="email"
                  type="email"
                  name="email"
                  class="form-repeat form-control"
                  placeholder="Nhập địa chỉ email"
                />
              </div>
              <div class="form-group">
                <label>Mật khẩu: </label>
                <input
                  id="password"
                  type="password"
                  name="password"
                  class="form-password form-control"
                  placeholder="Nhập mật khẩu"
                />
                <!-- <div class="error error-password">
                                    * Thông tin bắt buộc
                                </div> -->
              </div>
              {{!-- <div class="form-group">
                <label>Nhập lại mật khẩu: </label>
                <input
                  id="confirm-password"
                  type="text"
                  name="password"
                  class="form-repeat form-control"
                  placeholder="Nhập mật khẩu"
                />
                {{! <div class="error error-confirmPassword">
                  Không chính xác, vui lòng nhập lại !
                </div> }}
              </div> --}}
              <div class="login-page" onclick="displayLogin()">
                Đã có tài khoản?
                <a href="/auth/signin">Đăng nhập ngay</a>
              </div>
              <button id="btnSigup" type="submit" class="btn btn-black">Đăng ký</button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>